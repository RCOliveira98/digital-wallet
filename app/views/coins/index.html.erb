<p id="notice"><%= notice %></p>

<h1>Coins</h1>

<table class="table table-hover table-dark">
  <thead>
    <tr>
      <th scope="col"><%= translate_attribute_name(@coins, "description") %></th>
      <th scope="col"><%= translate_attribute_name(@coins, "acronym") %></th>
      <th scope="col"><%= translate_attribute_name(@coins, "url_image") %></th>
      <th colspan="3" scope="col">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td><%= image_tag(coin.url_image, size: '50x50') %></td>
        <td><%= link_to t('links.show'), coin %></td>
        <td><%= link_to t('links.edit'), edit_coin_path(coin) %></td>
        <td><%= link_to t('links.destroy'), coin, method: :delete, data: { confirm: t('dialogs.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

